<controls:ChildWindow x:Class="CardTrick.Sil.Result"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Width="400" Height="200" 
           Title="TA Da!!!!!!">
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="96"/>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock  x:Name="resulttext" Grid.Row="0" Text="The Card you have in your mind is " FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Image x:Name="imgresult" Height="96" Width="71" VerticalAlignment="Center" HorizontalAlignment="Center"  Grid.Row="1"></Image>
        <Button x:Name="OKButton" Content="Do It Again"  Grid.Row="2" Click="OKButton_Click" Width="75" Height="23" HorizontalAlignment="Right" Margin="0,12,10,0"/>
    </Grid>
</controls:ChildWindow>